<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <!-- purchase order attribute for sales order-->
    <table name="sales_order">
        <column xsi:type="varchar" name="po_number" nullable="true" length="10" comment="PO Number"/>
    </table>

    <!-- purchase order attribute for quote-->
    <table name="quote">
        <column xsi:type="varchar" name="po_number" nullable="true" length="10" comment="PO Number"/>
    </table>
</schema>
